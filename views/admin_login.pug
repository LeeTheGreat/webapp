extends admin_base.pug

block append content
    form(action='/admin/login' method='POST')
        div(class='container')
            h3 Login
            div(class='form-group row col-4 mb-3')
                div(class='col-sm-12 mb-3')
                    input(type='text' class='form-control' placeholder='username' id='username' name='username')
                div(class='col-sm-12 mb-3')
                    input(type='password' class='form-control' placeholder='password' id='password' name='password')
                div(class='col-sm-4 mb-3')
                    a(class='col-sm-4 col-form-label' href='/forgotpassword') Forgot Password
                div(class='col-sm-12 mb-3')    
                    button(type='submit' class='col-sm-12 mb-3') Login
            if msg
                span(class="border")
                    label(class='col-sm-3 col-form-label') #{msg}