extends base.pug

block append content
    div(class='container-fluid')
        h3 Edit Booking
        form(action='/booking/edit' method='POST')
            input(type='hidden' name='booking_id' value=booking_id)
            div(class='row mb-3')
                label(class='col-sm-2 col-form-label') Current Seat:
                label(class='col-sm-1 col-form-label') #{curr_seat.seat_num}
            div(class='row mb-3')
                label(class='col-sm-2 col-form-label') New Seat:
                div(class='col-sm-1')
                    select(name="seat_num" class="form-select" id="seat_num")
                        each seat in all_seats
                            option(value=seat.seat_num)=seat.seat_num
            div(class='row mb-3')
                label(class='col-sm-2 col-form-label')
                div(class='col-sm-2')  
                    button(type='submit' class="btn btn-primary") Change Seat