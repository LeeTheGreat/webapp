extends base.pug

block append content
    form(action='/profile' method='POST')
        div(class='container-fluid')
            h1 Your Profile
            div(class='form-group row col-6 mb-3')
                div(class='row mb-3')
                    label(class='col-sm-2 col-form-label') First Name
                    div(class='col-sm-6 ms-auto')            
                        input(type='text',class='form-control' id='name' name='name' value=profile.name)
                div(class='row mb-3')
                    label(class='col-sm-2 col-form-label') Phone
                    div(class='col-sm-6 ms-auto')            
                        input(type='text',class='form-control' id='phone' name='phone' value=profile.phone)
                div(class='row mb-3')
                    label(class='col-sm-2 col-form-label') Country
                    div(class='col-sm-6 ms-auto')
                        input(type='text',class='form-control' id='country' name='country' value=profile.country)
                div(class='row mb-3')
                    label(class='col-sm-3 col-form-label') Gender
                    div(class='col-sm-6 ms-auto')
                        select(name='gender' class='form-select' value=profile.gender)
                            option(value='F') F
                            option(value='M') M
                div(class='row mb-3')
                    label(class='col-sm-2 col-form-label') Qualification
                    div(class='col-sm-6 ms-auto')
                        input(type='text',class='form-control' id='qualification' name='qualification' value=profile.qualification)
                div(class='row mb-3')
                    label(class='col-sm-3 col-form-label') Email
                    div(class='col-sm-6 ms-auto')
                        input(type='email',class='form-control',id='email',name='email' value=profile.email)
                div(class='row mb-3')
                    label(class='col-sm-3 col-form-label') Password
                    div(class='col-sm-6 ms-auto')
                        input(type='password',class='form-control',id='password' name='password')
                div(class='row mb-3')
                    div(class='col-sm-6 ms-auto')
                        button(type='submit' class="btn btn-primary my-3") Update
            if msg
                span(class="border")
                    label(class='col-sm-3 col-form-label') #{msg}